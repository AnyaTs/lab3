
#include <stdio.h>
#include <string.h>
int last_index_of(int arr[3], int a) {
    int *p = arr;
    
    for (int i = 0; i < 3; i++) {
        if (a == *(p+i)) {
            printf("%d ", i);
        }
    }
    
}

int main()

{
    int arr1[3] = {10, 30, 40};
    int arr2[3] = {20, 50, 60};
    int arr3[3] = {70, 80, 90};
    last_index_of(arr1, 10);

    last_index_of(arr2, 50);

    last_index_of(arr3,90);

    return 0;

}
